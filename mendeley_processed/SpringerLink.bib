year = {2013}
}
@incollection{opu2013architecture,
abstract = {In this paper an architecture for context aware framework for mobile phones has been represented. The main goal of this proposed architecture is to enable phones to configure themselves based on self-initiated decisions which are directed by surrounding. This framework will reduce user's manual settings configuration. This will increase the flexibility level to great extent. Finally using the proposed framework phone will be self-configured. Most of the existing work regarding context aware mobile application is mainly based on location. However in this paper we have included a variety of context aware information along with inferred activities e.g. driving, running, meeting etc. in which users are engaged. In addition power management and memory management are two most important limitations of mobile devices. In this paper these two limitations are improved to a significant stage. {\textcopyright} 2013 Springer-Verlag.},
