@book{ruthmann2017the,
abstract = {The implementation of technology may present challenges to music educators. These challenges include varying levels of teacher confidence with technology and aspects of creative processes such as student exploration; teacher conceptions of when music happens, risk, and failure; and school curricula. This chapter provides examples of these challenges from a music teacher's perspective. One of the questions from my own practice is in what ways could students be makers, tinkerers, or engineers in the music classroom? I identify three principles that guide my own implementation of technology in a creativity-driven music classroom. These principles are not unique to teaching music with technology, and could underlie all music-making experiences for children.},
author = {Bledsoe, Ryan},
booktitle = {The Oxford Handbook of Technology and Music Education},
