journal = {ACM Transactions on Multimedia Computing, Communications and Applications},
keywords = {Cloud,Context,Crowdsensing,Driving,Music mood,Smartphones},
month = {oct},
number = {1s},
pages = {1--24},
publisher = {Association for Computing Machinery ({ACM})},
title = {{SAfeDJ: A crowd-cloud codesign approach to situation-aware music delivery for drivers}},
volume = {12},
year = {2015}
}
@inproceedings{pang2015contextaware,
abstract = {Taking photograph is always a fun part in a trip. It is common that we would like to take different views or scenes in a sightseeing spot. However, due to limited time, we always have missed some nice or popular scenes. This paper proposes a photo-taking application which reminds users with attractive scenes based on the location, photos recently taken, and photos contributed on the Internet. With an analysis of the photos on cloud-based album or social media, we combine the current context of user to recommend other nearby scenes that the user had missed to include in his/her collection. To evaluate our concept, we had tried to implement a prototype system with the use of geographical tags and scene recognition techniques to find out the similarities between photos. This helps us to filter candidate images for suggestion and rank them according to their physical closeness and the estimated popularity.},
